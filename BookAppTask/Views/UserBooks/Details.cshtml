@model BookAppTask.Models.Book 


@{
    ViewData["Title"] = "Book - details";
}

<div class="container mb-5 mt-5">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <button class="button-z">New Release</button>
            <button class="button-z button2">Most Popular</button>
            <button class="button-z button3">Browse Genres</button>
            <button class="button-z button4">Advance Search</button>
            <a asp-controller="UserBooks" asp-action="Index"><button class="button-z button5">Black</button></a>
        </div>
        <div class="col-md-2"></div>
    </div>

    <div class="row mt-5">
        <span class="mr-2"><p>Showing</p></span> <span class="mr-2"><p style="font-weight: bold;">1</p></span> <span><p>result for</p></span> <span class="ml-2 mr-2"><h6 style="font-weight:bold;">@Html.DisplayFor(model => model.Title)</h6></span>
    </div>

    <div class="row">
        <div class="col-md-4 mt-3">
            <img src="@Html.DisplayFor(model => model.ImageLink)" alt="detail-image" style="height: 350px;">
        </div>

        <div class="col-md-8 mb-5">
            <p style="font-weight:bold;">@Html.DisplayFor(model => model.Title)</p>
            <div class="row mt-2 ml-1">
                <span class="mr-2"><p>Available Copies:</p></span> <span class="mr-2"><p style="font-weight:bold;">@Html.DisplayFor(model => model.AvailableCopies),</p></span> <span><p>Copies in Library:</p></span> <span class="ml-2 mr-2"><p style="font-weight:bold">@Html.DisplayFor(model => model.CopiesInLibrary),</p></span>
