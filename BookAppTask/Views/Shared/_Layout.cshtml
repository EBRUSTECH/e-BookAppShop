
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Book App</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/style.css" rel="stylesheet" type="text/css" />

</head>
<body>

    <div class="container-fluid">
        <header class="mt-2">
            <ul>
                <li class="logo-image"><img src="~/image/logo.jpg" alt="logo-image"></li>
                <li class="nav-bar"><a href="#portfolio">Favourite</a></li>
                <li class="nav-bar"><a href="#contact-me">Sign In</a> </li>
            </ul>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-12">
                    <div class="flex-switch-1 text-center">
                        <div class="mr-3"><h6 style="font-weight: bold;">Wish to Search</h6> </div>
                        <div>
                            <label class="switch">
                                <input type="checkbox">
                                <span class="slider"></span>
                                <span class="label ml-4">Books</span>
                            </label>
                        </div>
                        <div class="ml-3"><p>or</p></div>
                        <div class="ml-3">
                            <label class="switch">
                                <input type="checkbox">
                                <span class="slider"></span>
                                <span class="label ml-4">CDs</span>
                            </label>
                        </div>
                        <div class="ml-3"><p>Only available copies will display</p></div>
                    </div>
                </div>
                <div class="col-md-2"></div>
            </div>

            <div class="row">
                <div class="flex-search-bar">
                    <hr class="left-hr">
                    <div class="search-container">
                        <form asp-controller="UserBooks" asp-action="Search" method="get" role="search">
                            <input type="text" placeholder="Search.." name="searchString">
                            <button type="submit">Search</button>
                        </form>
                    </div>
                    <hr class="right-hr">
                </div>
            </div>

        </header>

        <div class="">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    </div>

    <div class="row mt-5 mb-4" style="justify-content: center;">
        <span class="mr-5"> <h5>About Us</h5></span>
        <span class="mr-5 ml-5"><h5>Contact Us</h5></span>
        <span class="ml-5"><i class="fa fa-facebook-official" style="font-size: 30px;" aria-hidden="true"></i></span>
        <span class="ml-5"><i class="fa fa-twitter-square" style="font-size: 30px;" aria-hidden="true"></i></span>
        <span class="ml-5"><i class="fa fa-instagram" style="font-size: 30px;" aria-hidden="true"></i></span>
    </div>

    <div class="copy-right text-center bg-dark" style="padding: 30px;">
        <p class="my-auto">&copy; 1997 - 2023 e - Book shop</p>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  
    @await RenderSectionAsync("Scripts", required: false)
</body>
